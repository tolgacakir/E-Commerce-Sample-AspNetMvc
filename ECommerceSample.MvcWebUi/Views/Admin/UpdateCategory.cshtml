@model ECommerceSample.MvcWebUi.Models.CategoriesViewModel
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/_AdminLayout.cshtml";
}

<h1>Update</h1>

<form asp-controller="admin" asp-action="UpdateCategory" method="post">
    <div class="form-group">
        <label asp-for="Category.Name"></label>
        <input asp-for="Category.Name" class="form-control" placeholder="Category Name" />
        <span asp-validation-for="Category.Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="Category.Description"></label>
        <input asp-for="Category.Description" class="form-control" placeholder="Category Description" />
        <span asp-validation-for="Category.Description"></span>
    </div>

    <div class="form-group">
        <label asp-for="Category.Picture"></label>
        <input asp-for="Category.Picture" class="form-control" placeholder="Category Picture Path" />
        <span asp-validation-for="Category.Picture"></span>
    </div>
    <input type="hidden" asp-for="Category.Id" />
    <input type="submit" value="Update" class="btn btn-xs btn-success" />
</form>
